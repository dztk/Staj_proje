            </div>
            <div class="form-group">
                <label asp-for="IsEmriId" class="control-label"></label>
                <select asp-for="IsEmriId" class="form-control" asp-items="ViewBag.IsEmriId"></select>
                <span asp-validation-for="IsEmriId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Miktar" class="control-label"></label>
                <input asp-for="Miktar" class="form-control" />
                <span asp-validation-for="Miktar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IscilikSuresiSaat" class="control-label"></label>
                <input asp-for="IscilikSuresiSaat" class="form-control" />
                <span asp-validation-for="IscilikSuresiSaat" class="text-danger"></span>
            </div>

            
            

            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Listeye Dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

