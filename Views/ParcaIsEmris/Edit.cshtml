@model Proje.Models.ParcaIsEmri

@{
    ViewData["Title"] = "Düzenle";
}

<h1>Düzenle</h1>

<h4>Parça-İş Emri</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ParcaId" class="control-label"></label>
                <select asp-for="ParcaId" class="form-control" asp-items="ViewBag.ParcaId"></select>
