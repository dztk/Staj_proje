@model Proje.Models.Durak

<h2>Yeni Durak Ekle</h2>
@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Ad"></label>
        <input asp-for="Ad" class="form-control" />
        <span asp-validation-for="Ad" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Kod"></label>
        <input asp-for="Kod" class="form-control" />
        <span asp-validation-for="Kod" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Enlem</label>
        <input asp-for="KonumBilgi.Enlem" class="form-control" />
    </div>

    <div class="form-group">
        <label>Boylam</label>
        <input asp-for="KonumBilgi.Boylam" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary">Geri</a>
</form>






































































