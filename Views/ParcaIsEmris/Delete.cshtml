@model Proje.Models.ParcaIsEmri

@{
    ViewData["Title"] = "Sil";
}

<h1>Sil</h1>

<h3>Silmek istediğinizden emin misiniz?</h3>
<div>
    <h4>Parça - İş Emri</h4>
    <hr />
    <dl>
        <dt>Parça</dt>
        <dd>@Model.Parca?.Ad</dd>

        <dt>İş Emri</dt>
        <dd>
            @{
                var tip = Model.IsEmri?.Tip.ToString() ?? "-";
                var detay = Model.IsEmri?.Tip == Proje.Enums.IsEmriTipi.Arac
                ? Model.IsEmri?.Arac?.Plaka
                : Model.IsEmri?.Durak?.Ad;
            }
            @($"{tip} - {detay}")
        </dd>

        <dt>Miktar</dt>
        <dd>@Model.Miktar</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" /> |
        <a asp-action="Index">Listeye Dön</a>
    </form>
</div>